<html lang="ja">
  <head>
    <%- include('../views/partials/head'); %>
  </head>
  <body>
    <header><%- include('../views/partials/headerLogin'); %></header>
    <span id="append"></span>
    <form action="/messages/<%= messages.id %>/update" method="POST">
      <table align="center" id="post">
        <tr>
          <td>タイトル</td>
        </tr>
        <tr>
          <td><input type="text" name="title" style="width: 1008px" value=
          <% if(messages) { %>
            <%= messages.title %>
          <% } %> />
          </td>
        </tr>
        <tr>
          <td>コンテンツ</td>
        </tr>
        <tr>
          <td>
            <textarea
              name="content"
              rows="4"
              cols="40"
              style="width: 1008px; height: 204px"
            >             
             <% if(messages) { %>
              <%= messages.content %>
            <% } %></textarea>
          </td>
        </tr>
        <tr>
          <td>
            <input type="hidden" name="userId" value=<%=user.id%>>
          </td>
        </tr>
        <tr>
          <td>
            <input type="submit" value="送信" />
          </td>
        </tr>
      </table>
    </form>

  </body>
  <%- include('../views/partials/script'); %>
</html>